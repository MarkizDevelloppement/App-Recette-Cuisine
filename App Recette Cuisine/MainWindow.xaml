<Window x:Class="App_Recette_Cuisine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App_Recette_Cuisine"
        mc:Ignorable="d"
        Title="App Recette" Height="450" Width="657">
    <DockPanel>
        <Menu DockPanel.Dock="Top" Height="30" Background="Black">
            <MenuItem  Header="_Fichier" Margin="0,5,0,0" Background="Black" Foreground="White" >
                <MenuItem Header="_Nouveau" Click="MenuItem_Click_New" Background="#FF232E3C" BorderBrush="{x:Null}" Foreground="White"/>
                <MenuItem Header="_Imprimer" Click="MenuItem_Click_Print" Background="#FF232E3C"/>
                <Separator />
                <MenuItem Header="_Quitter" Click="MenuItem_Click_Exit" Background="#FF232E3C"/>
            </MenuItem>
            
            <MenuItem Header="_Requête" Margin="0,5,0,0" Background="Black" Foreground="White" >
                <MenuItem Header="Charger la Base de données" Click="MenuItem_Click_LoadBDD" Background="#FF232E3C"/>
                <MenuItem Header="Sauvegarder dans la Base de données" Click="MenuItem_Click_SaveInBDD" Background="#FF232E3C"/>
                <MenuItem Header="Mettre à jour la Base de données" Click="MenuItem_Click_UpdateInBDD" Background="#FF232E3C"/>
            </MenuItem>

        </Menu>
        <Grid>
            <DataGrid HorizontalAlignment="Left" Height="275" Margin="10,74,0,0" VerticalAlignment="Top" Width="629"/>
            <Button Content="Ajouter une Recette" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="158" Height="35"/>
            <Button Content="Afficher par catégorie" HorizontalAlignment="Left" Margin="194,10,0,0" VerticalAlignment="Top" Width="158" Height="35"/>

        </Grid>
    </DockPanel>
</Window>
